@model QueroTransporte.Model.RotaModel

@{
    ViewData["Title"] = "Detalhes Rota";
}

<h2>Detalhes</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Origem" class="control-label"></label>
                <input asp-for="Origem" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Destino" class="control-label"></label>
                <input asp-for="Destino" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="HorarioSaida" class="control-label"></label>
                <input asp-for="HorarioSaida" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="HorarioChegada" class="control-label"></label>
                <input asp-for="HorarioChegada" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DiaSemana" class="control-label"></label>
                <input asp-for="DiaSemana" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="RotaId" class="control-label"></label>
                <input asp-for="RotaId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsComposta" id="checkRota" /> @Html.DisplayNameFor(model => model.IsComposta)
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>
<a href="@Url.Action("Edit", "Rota", new { id = Model.Id })" class="btn btn-info"><i class="fa fa-pencil"></i> Editar </a>
<a class="btn btn-default" asp-action="Index">Voltar</a>
