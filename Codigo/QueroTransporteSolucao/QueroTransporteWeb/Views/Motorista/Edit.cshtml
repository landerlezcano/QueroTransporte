@model Model.ViewModel.MotoristaUsuarioViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="x_title">
    <h2>Editar Motorista </h2>
    <div class="clearfix"></div>
</div>
<div class="x_content">
    <form class="form-horizontal form-label-left" asp-action="Create" asp-controller="Motorista" novalidate>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Nome Motorista <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" asp-for="@Model.Usuario.Nome" id="Nome" required="required" disabled class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                CPF Motorista <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" asp-for="@Model.Usuario.Cpf" id="Cpf" required="required" disabled data-inputmask="'mask' : '***.***.***.**'" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Categoria CNH <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" asp-for="@Model.Motorista.Categoria" id="Categoria" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Validade CNH <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" asp-for="@Model.Motorista.Validade" id="Validade" required="required" data-inputmask="'mask': '99/99/9999'" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                Numero CNH <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" asp-for="@Model.Motorista.Cnh" id="Cnh" required="required" data-inputmask="'mask' : '***-***-***-**'" class="form-control col-md-7 col-xs-12">
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <button id="send" type="submit" class="btn btn-success">Alterar Dados</button>
                <a href="@Url.Action("Index", "Motorista")" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <!-- validator -->
    <script src="~/template/vendors/validator/validator.js"></script>
    <!-- jquery.inputmask -->
    <script src="~/template/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
}