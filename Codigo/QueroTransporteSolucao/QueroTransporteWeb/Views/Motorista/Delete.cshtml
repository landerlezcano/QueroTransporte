@model QueroTransporte.Model.MotoristaModel

@{
    ViewData["Title"] = "Remoção Motorista";
}

<h2>Remoção</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Categoria" class="control-label"></label>
            <input asp-for="Categoria" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="control-label">@Html.DisplayNameFor(model => model.Validade)</label>
            <input class="form-control" value="@Html.DisplayFor(model => model.Validade)" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Cnh" class="control-label"></label>
            <input asp-for="Cnh" class="form-control" readonly />
        </div>
        <form asp-action="Delete" asp-controller="Motorista">
            <input type="submit" value="Remover" class="btn btn-success" />
            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>
