@model QueroTransporte.Model.FrotaModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Remoção</h2>
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" readonly />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPublic" readonly /> @Html.DisplayNameFor(model => model.IsPublic)
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

<form asp-action="Delete">
    <input type="submit" value="Remover" class="btn btn-success" />
    <a class="btn btn-danger" asp-action="Index">Cancelar</a>
</form>
