@model QueroTransporte.Model.UsuarioModel

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" value=@Model.Cpf class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" value=@Model.Nome class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" value=@Model.Email class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" value=@Model.Telefone class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" value=@Model.Tipo class="form-control" readonly />
            </div>
        </form>
    </div>
</div>
<div>
    <a href="@Url.Action("Edit", "Usuario", new { id = Model.Id })" class="btn btn-info"><i class="fa fa-pencil"></i> Editar </a>
    <a class="btn btn-default" asp-action="Index">Voltar</a>
</div>
