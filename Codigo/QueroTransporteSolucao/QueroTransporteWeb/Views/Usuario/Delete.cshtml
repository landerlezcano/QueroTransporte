@model QueroTransporte.Model.UsuarioModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Remoção</h2>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" value=@Model.Cpf class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" value=@Model.Nome class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" value=@Model.Email class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" value=@Model.Telefone class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" value=@Model.Tipo class="form-control" readonly />
            </div>
        </form>
    </div>
</div>

<form asp-action="Delete">
    <input type="submit" value="Remover" class="btn btn-success" />
    <a class="btn btn-danger" asp-action="Index">Cancelar</a>
</form>
